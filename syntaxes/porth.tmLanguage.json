{
	"name": "Porth",
	"fileTypes": [
		"porth"
	],
	"scopeName": "source.porth",
	
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#definitions"
		},
		{
			"include": "#placeholders"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#intrinsics"
		},
		{
			"include": "#constants-and-special-vars"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.porth",
					"match": "\\b(if|else|end|while|do|macro|orelse|memory|proc)\\b"
				},
				{
					"name": "keyword.declaration.porth",
					"match": "\\b(include)\\b"
				}
			]
		},
		"definitions": {
			"patterns": [
				{
					"name": "support.class.porth",
					"match": "(?<=(macro|memory|proc)\\s+)(\\S*)"
				}
			]
		},
		"placeholders": {
			"patterns": [
				{
					"name": "markup.italic.porth",
					"match": "(?<=(\\s|^))_[\\S]*_(?:(\\s|$))"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.porth",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.porth",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.porth",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.porth",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "invalid.illegal",
					"match": "(?<=//\\s*)(TODO|FIXME).*"
				},
				{
					"name": "comment.line.double-slash.porth",
					"match": "(//(?!\\s?(TODO|FIXME)(\\s|:|$)).*|//\\s*)"
				}
			]
		},
		"intrinsics": {
			"patterns": [
				{
					"name": "variable.name.source.porth",
					"match": "(?<=^|\\s)(\\+|-|\\*|divmod|print|=|>|<|>=|<=|!=|shr|shl|or|and|not|dup|swap|drop|over|rot|!8|@8|!16|@16|!32|@32|!64|@64|cast\\(ptr\\)|cast\\(int\\)|cast\\(bool\\)|argc|argv|here|syscall0|syscall1|syscall2|syscall3|syscall4|syscall5|syscall6)(?=>$|\\s)"
				}
			]
		},
		"constants-and-special-vars": {
			"patterns": [
				{
					"name": "constant.numeric.porth",
					"match": "\\b((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)\\b(?!\\$)"
				},
				{
					"name": "invalid.illegal",
					"match": ";"
				}
			]
		}
	}
}